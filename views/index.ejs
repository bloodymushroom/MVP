<!DOCTYPE html>
<html>
	<head>
		<title>HRinder</title>
		<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
		<script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
	</head>
	<body ng-app='App'>
		<h1>HR50 Tinder</h1>

		<ui-view></ui-view>
		<div ng-show='false' ng-repeat='user in users'>
			<h3>{{user.name}}</h3>
			<span>{{user.description}}</span>
			<span>Upvotes: {{user.votes}}</span>
			<button ng-click='upvote(user)'>Upvote!</button>
		</div>

		<!-- User View -->
		<script type="text/ng-template" id="/home.html">
			<div>
				<h3>{{users[current].name}}</h3>
				<span>{{users[current].description}}</span>
				<br>
				<div>
					<span>Upvotes: {{users[current].votes}}</span>
					<button ng-click='upvote(users[current])'>Upvote!</button>
				</div>
				<br>
				<button ng-click='likeUser(users[current])'>You're Hot!</button>
				<a ng-show='users[current].liked' href="#/chat">Chat!</a>
				<p>
				<a href='' ng-click='nextUser()'>Next</a>
				</p>
			</div>
		</script>

		<!-- Chat View -->
		<script type="text/ng-template" id="/chat.html">
			<div>
				<h3>Your Liked {{to.name}}!</h3>
				<div ng-repeat='message in messages'>
					<b>{{message.from}}</b>: {{message.message}}
				</div>
				<p>
					<span>Send a message:</span>
					<form>
						<input type='text' ng-model='message' placeholder='Message here'></input>
						<button type='submit' ng-click='postMessage(message)'>Send</button>
					</form>
				</p>
				<a href='#/home'>Back</a>
			</div>
		</script>
	</body>
</html>